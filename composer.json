{
  "name": "thepixeldeveloper/sitemap-bundle",
  "type": "library",
  "description": "A Symfony Bundle that integrates thepixeldeveloper/sitemap.",
  "keywords": ["sitemap", "xml", "symfony", "bundle"],
  "license": "MIT",
  "authors": [
    {
      "name": "Mathew Davies",
      "homepage": "http://mathew-davies.co.uk",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "thepixeldeveloper/sitemap": "^5.1"
  },
  "require-dev": {
    "mikey179/vfsStream": "^1.6",
    "phpstan/phpstan": "^0.9.1",
    "phpstan/phpstan-phpunit": "^0.9.3",
    "phpunit/phpunit": "^6.4",
    "symfony/console": "^3.3",
    "symfony/framework-bundle": "^3.3",
    "symfony/yaml": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "Thepixeldeveloper\\SitemapBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Thepixeldeveloper\\SitemapBundle\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpstan analyse src tests --level=7 -c phpstan.neon",
    "coverage": "phpunit --coverage-text --colors=never --coverage-html ./coverage"
  },
  "config": {
    "sort-packages": true
  }
}
